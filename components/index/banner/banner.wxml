<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" style="height:400rpx;" indicator-active-color="red">
  <block wx:for="{{imgUrls}}" wx:key="index">
    <swiper-item>
        <image style="display:block;width:100%;margin:0 auto;" src="{{item.image_url}}" class="slide-image" mode="widthFix" />
    </swiper-item>
  </block>
</swiper>